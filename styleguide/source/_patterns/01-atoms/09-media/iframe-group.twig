{% set posClass = iframe.position ? "ma__iframe--" ~ iframe.position : '' %}

<div class="ma__iframe-group">
  <div class="ma__iframe ma__iframe--left">
    <div class="ma__iframe__container js-ma-responsive-iframe">
      <iframe height="{{ iframeGroup.iframeLeft.height }}" src="{{ iframeGroup.iframeLeft.src }}" allowfullscreen title="{{ iframeGroup.iframeLeft.title }}"></iframe>
      {% if iframeGroup.iframeLeft.link %}
        <div class="ma__iframe__link">
          {% set decorativeLink = iframeGroup.iframeLeft.link %}
          {% include "@atoms/decorative-link.twig" %}
        </div>
      {% endif %}
    </div>
  </div>
  <div class="ma__iframe ma__iframe--right">
    <div class="ma__iframe__container js-ma-responsive-iframe">
      <iframe height="{{ iframeGroup.iframeRight.height }}" src="{{ iframeGroup.iframeRight.src }}" allowfullscreen title="{{ iframeGroup.iframeRight.title }}"></iframe>
      {% if iframeGroup.iframeRight.link %}
        <div class="ma__iframe__link">
          {% set decorativeLink = iframeGroup.iframeRight.link %}
          {% include "@atoms/decorative-link.twig" %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
